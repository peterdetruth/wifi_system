# ----------------------------------------------------------------
# Example Environment Configuration for WiFi Management System
# Copy this file to ".env" and fill in your real credentials locally
# ----------------------------------------------------------------

# Base Application
CI_ENVIRONMENT = development
app.baseURL = 'http://localhost:8080/'

# Database Connection
database.default.hostname = localhost
database.default.database = wifi_system
database.default.username = root
database.default.password =
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

# Email Settings
email.protocol = smtp
email.SMTPHost = smtp.mailtrap.io
email.SMTPUser = your_smtp_user
email.SMTPPass = your_smtp_pass
email.SMTPPort = 2525
email.mailType = html

# M-Pesa Configuration
mpesa.consumer_key = your_mpesa_consumer_key
mpesa.consumer_secret = your_mpesa_consumer_secret
mpesa.shortcode = 123456
mpesa.passkey = your_mpesa_passkey
mpesa.environment = sandbox  # or 'production'

# Application Settings
app.defaultTimezone = 'Africa/Nairobi'
app.sessionDriver = 'CodeIgniter\Session\Handlers\FileHandler'
app.sessionSavePath = WRITEPATH + 'session'

# Logging
logger.threshold = 4
